import matplotlib.pyplot as plt
import numpy as np

# Создаем данные для графиков
a = {'Меркурий': 5.791e10, 'Венера': 1.082e11, 'Земля': 1.496e11, 'Марс': 2.279e11, 'Юпитер': 7.784e11, 'Сатурн': 1.427e12, 'Уран': 2.871e12, 'Нептун': 4.498e12}  # Большие полуоси орбит планет, м
e = {'Меркурий': 0.2056, 'Венера': 0.0068, 'Земля': 0.0167, 'Марс': 0.0934, 'Юпитер': 0.0483, 'Сатурн': 0.0539, 'Уран': 0.0473, 'Нептун': 0.0086}  # Эксцентриситеты орбит планет

theta = np.linspace(0, 2*np.pi, 1000)

# Создаем графики для каждой планеты
fig, ax = plt.subplots(figsize=(8,8))
for planet in a:
    r = a[planet] * (1 - e[planet]**2) / (1 + e[planet]*np.cos(theta))
    x = r * np.cos(theta)
    y = r * np.sin(theta)
    ax.plot(x, y, label=planet)

# Добавляем название и метки на осях
ax.set_title('Траектории движения планет Солнечной системы')
ax.set_xlabel('x, м')
ax.set_ylabel('y, м')

# Задаем масштаб осей и легенду
ax.set_xlim([-5e12, 5e12])
ax.set_ylim([-5e12, 5e12])
ax.legend()

# Отображаем график
plt.show()
